/* pages/category/index.wxss */
page {
  height: 100%;
}
.cates {
  height: 100%;
}
.cates .cates_container {
  height: calc(100vh-90rpx);
  display: flex;
}
.cates .cates_container .left_view {
  flex: 2;
  border-right: 2rpx solid rgba(0, 0, 0, 0.5);
}
.cates .cates_container .left_view .menu_item {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.cates .cates_container .left_view .active {
  color: var(--themeColor);
  border-left: 5rpx solid currentColor;
}
.cates .cates_container .right_view {
  flex: 5;
}
.cates .cates_container .right_view .goods_group .goods_title {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40rpx;
  font-weight: bold;
  height: 80rpx;
  padding: 50rpx 0;
}
.cates .cates_container .right_view .goods_group .goods_title .timer {
  color: #ccc;
  padding: 0 10rpx;
}
.cates .cates_container .right_view .goods_group .goods_list {
  display: flex;
  flex-wrap: wrap;
}
.cates .cates_container .right_view .goods_group .goods_list navigator {
  width: 33.33%;
  text-align: center;
}
.cates .cates_container .right_view .goods_group .goods_list navigator image {
  width: 50%;
}
